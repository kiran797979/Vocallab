{
  "expo": {
    "name": "VocalLab",
    "slug": "vocallab",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#060a13"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vocallab.app",
      "infoPlist": {
        "NSCameraUsageDescription": "VocalLab needs camera access to detect lab equipment.",
        "NSMicrophoneUsageDescription": "VocalLab needs microphone access for voice instructions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#060a13"
      },
      "package": "com.vocallab.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "extra": {
      "backendUrl": "http://172.20.10.2:8000",
      "wsUrl": "ws://172.20.10.2:8000/ws/student"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VocalLab to use the camera"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow VocalLab to use the microphone"
        }
      ]
    ]
  }
}